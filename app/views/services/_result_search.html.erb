<table class="table">
  <thead>
    <tr>
      <%= render partial: "pager", locals: { keywords: @keywords, page: @page } %>
    </tr>
    <tr>
      <th>Código</th>
      <th>Nombre</th>
      <th>Precio dia</th>
      <th>Precio noche</th>
      <th>Fecha de creacion</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @services.each do |service| %>
      <tr>
        <td><%= service.code %></td>
        <td><%= service.name %></td>
        <td><%= service.day_price %></td>
        <td><%= service.night_price %></td>
        <td><%= service.created_at.strftime("%d/%m/%Y") %></td>
        <td>
          <%= button_to edit_service_path(service), {method: :get, class: "btn btn-info"} do %>
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"> </span> Editar
          <% end %>
        </td>
        <td>
          <%= button_to service, { method: :delete, data: { confirm: '¿Está seguro?' }, class: "btn btn-danger" } do %>
            <span class="glyphicon glyphicon-trash" aria-hidden="true"> </span> Eliminar
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>