<div class="container-fluid">
  <div class="row">
    <div class="panel-body">
      <%= form_for(service) do |f| %>
        <% if service.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(services.errors.count, "error") %> No se pudo guardar porque:</h2>

            <ul>
            <% service.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-group row">
          <div class="col-xs-2">
            <%= f.label :code, "Código" %>
          </div>
          <div class="col-xs-10">
            <%= f.text_field :code, autofocus: true, placeholder: "Código", class: "form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-xs-2">
            <%= f.label :name, "Nombre" %>
          </div>
          <div class="col-xs-10">
            <%= f.text_field :name, placeholder: "Nombre", class: "form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-xs-2">
            <%= f.label :day_price, "Precio de venta" %>
          </div>
          <div class="col-xs-10">
            <div class="input-group">
              <div class="input-group-addon">Q</div>
              <%= f.text_field :day_price, placeholder: "Precio de dia", class: "form-control" %>
            </div>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-xs-2">
            <%= f.label :night_price, "Precio" %>
          </div>
          <div class="col-xs-10">
            <div class="input-group">
              <div class="input-group-addon">Q</div>
              <%= f.text_field :night_price, placeholder: "Precio de noche", class: "form-control" %>
            </div>
          </div>
        </div>
        <%= f.submit "Aceptar", class: "btn btn-success" %>
      <% end %>
    </div>
  </div>
</div>